{
	"name": "@gwigz/homunculus-core",
	"version": "0.0.0",
	"description": "A third-party framework for interacting with Linden Lab's virtual world \"Second Life\"",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"require": "./dist/index.cjs",
			"import": "./dist/index.mjs",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"dev": "bun run ./src/index.ts",
		"prebuild": "rm -rf dist",
		"build": "bun run ./scripts/build.ts",
		"postbuild": "cp -r ./src/database/migrations ./dist/migrations",
		"lint": "biome lint .",
		"db:generate": "bunx drizzle-kit generate --dialect sqlite --schema ./src/database/schema.ts --out ./src/database/migrations"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/gwigz/homunculus.git"
	},
	"keywords": [
		"bot",
		"life",
		"second",
		"secondlife"
	],
	"author": "gwigz <gwigz@icloud.com>",
	"license": "MIT",
	"bugs": "https://github.com/gwigz/homunculus/issues",
	"homepage": "https://github.com/gwigz/homunculus#readme",
	"dependencies": {
		"@usebruno/node-machine-id": "^2.0.0",
		"@vladfrangu/async_event_emitter": "^2.4.6",
		"drizzle-orm": "^0.43.1",
		"xmlrpc": "^1.3.2"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/bun": "latest",
		"@types/node": "^22.15.19",
		"@types/xmlrpc": "^1.3.10",
		"bun-plugin-dts": "^0.3.0",
		"drizzle-kit": "^0.31.1"
	},
	"peerDependencies": {
		"typescript": "^5"
	}
}
